@model TodoItem
@using Humanizer

@{  
    ViewData["Title"] = "Check your item: " + Model.Title + " - " + Model.Id;
}

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>Item</td>
                <td>Start</td>
                <td>Stop</td>
                <td>Due</td>
                <td>Rem time</td>
                <td>Time Spend</td>
            </tr>              
        </thead>
        <tr>
            <td>@Model.Title</td>
            <td>@Model.StartAt</td>
            <td>@Model.StopAt</td>
            <td>@Model.DueAt</td>
            <td>@Model.TimeRem.Humanize(3)</td> 
            <td>@Model.TimeSpend.Humanize(3)</td>
        </tr>
        <tr>
            <td>
                <form asp-action="StopNow" method="POST">
                    <input type="button" class="btn btn-info" value="Stop Now!">
                    <input type="hidden" name="id" value="@Model.Id">
                </form>
            </td>
        </tr>
    </table>
</div>