@model TodoItem

<form asp-action="AddItem" method="POST">
    <label asp-for="Title">Add a new Item:</label>
    <input asp-for="Title"/>
    <label asp-for="DueAt">Due At (Date + Time):</label>
    <input type="datetime-local" asp-for="DueAt" value="@DateTime.Now.ToString("s")"/>
    <br/>
    <button type="submit">Add</button>
</form>
