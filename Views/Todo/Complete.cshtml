@model TodoViewModel
@using Humanizer

@{
    // NOT USED ANYMORE -> merged with Index.
    // Not used.
    
    ViewData["Title"] = "Check completed! todo list like a mfcker!";
}

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>Item</td>
                <td>Start</td>
                <td>Due</td>
                <td>Rem time</td>
            </tr>
                
        </thead>
        @foreach (var item in Model.Items)
        {
          <tr class="done">
            <td>
                &#x2714;
            </td>
            <td>@item.Title</td>
            <td>@item.StartAt</td>
            <td>@item.DueAt</td>
            <td>@item.TimeRem.Humanize(3)</td> 
          </tr>
        }
    </table>
</div>